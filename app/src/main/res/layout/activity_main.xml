<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.winetenders.msis4363.winetenders.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical">

        //wine type row

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="0dp"
            android:elevation="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Type of wine:"
                android:textSize="17dp"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="-7dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:padding="5dp" />

        </LinearLayout>

        //price range row

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Price Range:"
                android:textSize="17dp"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="-7dp" />

            <Spinner
                android:id="@+id/priceSpinner"
                android:layout_width="200dp"
                android:layout_height="50dp" />

        </LinearLayout>

        //sweetness row

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sweetnessTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Sweetness:"
                android:textSize="17dp"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="-7dp" />

            <Spinner
                android:id="@+id/sweetnesSpinner"
                android:layout_width="200dp"
                android:layout_height="50dp" />

        </LinearLayout>

        //acidity row

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/acidityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Acidity:"
                android:textSize="17dp"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="-7dp" />

            <Spinner
                android:id="@+id/aciditySpinner"
                android:layout_width="200dp"
                android:layout_height="50dp" />

        </LinearLayout>

        //bitterness row

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bitternessTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Bitterness:"
                android:textSize="17dp"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="-7dp" />

            <Spinner
                android:id="@+id/bitternessSpinner"
                android:layout_width="200dp"
                android:layout_height="50dp" />

        </LinearLayout>

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:text="Button" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
